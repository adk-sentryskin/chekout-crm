# Database Configuration
DB_DSN=postgresql://user:password@localhost:5432/database?options=-c%20search_path=crm

# Firebase Configuration
GCP_PROJECT_ID=your-project-id
SA_PRIVATE_KEY_ID=your-private-key-id
SA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
SA_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
SA_CLIENT_ID=your-client-id
FIREBASE_API_KEY=your-firebase-api-key

# Frontend URL
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8001

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Token Validation
CHECK_TOKEN_REVOCATION=true
TOKEN_CACHE_TTL=300

# CRM Encryption
CRM_ENCRYPTION_KEY=your-32-character-encryption-key-here

# Service Port
PORT=8001
